#sw-custom-form
  = form_tag soloist_scripts_path, :id => "new_soloist_script" do
    #sw-customizer
      = render "soloist_scripts/error_messages"

      - @recipe_groups.each do |recipe_group|
        .category-field
          .category-description
            %h4= recipe_group.name
            %p= recipe_group.description

          %fieldset.recipe-selector
            - recipe_group.recipes.each do |recipe|
              .recipe-pair
                = check_box_tag 'soloist_script[recipe_ids][]', recipe.id, true
                = label_tag :recipe_ids, recipe.name

      .submit_button
        = submit_tag "create my script", :class => "awesome"